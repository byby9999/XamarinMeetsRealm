<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.SurgeriesPage">
    <ContentPage.Content>
        <StackLayout>
            <!-- Place new controls here -->
            <Label x:Name="Title" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" FontSize="Title" TextColor="DeepPink" />
            <Label x:Name="Subtitle" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" FontSize="Small" TextColor="CornflowerBlue" />
            <ListView x:Name="MySurgeries"
            ItemsSource="{Binding Items}" 
            CachingStrategy="RecycleElement">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding Procedure.Name, Mode=TwoWay}" WidthRequest="300" Style="{DynamicResource ListItemTextStyle}" />
                                <Label Text="{Binding SurgeonFullName}"  WidthRequest="100" TextColor="Blue"></Label>
                                <Label WidthRequest="20" Text="{Binding Extra}" TextColor="LimeGreen" FontSize="Small"></Label>
                                
                                <ImageButton x:Name="updateButton" BackgroundColor="Transparent" Source="edit.png" 
                                    CommandParameter="{Binding Id}" Clicked="editButton_Clicked" WidthRequest="40"/>
                                <ImageButton x:Name="removeButton" BackgroundColor="Transparent" Source="delete.png"
                                    CommandParameter="{Binding Id}" Clicked="removeButton_Clicked" WidthRequest="40"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label x:Name="TotalEntries" FontSize="Small" TextColor="Coral"></Label>
            <Button x:Name="addButton" Text="+ Surgery" BackgroundColor="#3DD49B" TextColor="White" Clicked="addButton_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>